import java.util.Scanner;
public class invertedpyramid {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter rows");
		int row = sc.nextInt();
		int i =row, j;
		while (i > 0)
{
			j = 0;
			while (j++ <row- i)
{
				System.out.print(" ");
			}
			j = 0;
			while (j++<(i*2)-1)
{
				System.out.print("*");
			}
			System.out.println();
			i--;
		}
	}
}
